{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="text-center">{{ user.username }}'s opinions</h1>

    <div class="">
        {% for opinion in opinions %}
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    {% if opinion.type == 'Positive' %}
                        {% set panelClass = "success" %}
                    {% elseif opinion.type == 'Negative' %}
                        {% set panelClass = 'danger' %}
                        {% elseif opinion.type == 'Neutral' %}
                        {% set panelClass = 'info' %}
                    {% endif %}

                    <div class="panel panel-{{ panelClass }}">
                        <div class="panel-heading">
                            <h3 class="panel-title" style="color: white">
                                Type: {{ opinion.type }}
                            </h3>
                        </div>
                        <div class="panel-body">
                            {{ opinion.text }}
                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-left">Author: {{ opinion.byUser.username }}</h5>
                                </div>

                                <div class="col-md-6">
                                    <div class="text-right">
                                        <span>Date of create: {{ opinion.date|date('Y-m-d H:i:s') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
        {% endfor %}
    </div>

{% endblock %}