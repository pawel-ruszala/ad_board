{% extends "::base.html.twig" %}

{% block title %}AppBundle:Profile:showProfile{% endblock %}

{% block body %}
    {% if not user %}
        <p>That user doesn't exist</p>

    {% else %}
        <h3 style="display: inline-block"><span class="glyphicon glyphicon-user"></span> Name:&nbsp;&nbsp;</h3>
        <h2 style="display: inline-block">{{ user.username }}</h2><br/>

        <h3 style="display: inline-block"><span class="glyphicon glyphicon-envelope"></span> Contact email:&nbsp;&nbsp;</h3>
        <h2 style="display: inline-block">{{ user.email }}</h2><br/>
        <a href="{{ path('newOpinion', {'id':user.id}) }}"><button class="btn btn-primary">Add opinion</button></a>
        <br/><br/>
        <a href="{{ path('showOpinions', {'id':user.id}) }}"><button class="btn btn-primary">All opinions</button></a>
        <a href="{{path('userAdv', {'id':user.id})}}"><button class="btn btn-primary">All {{ user.username }}'s adverts</button></a>
    {% endif %}
{% endblock %}
